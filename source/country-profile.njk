---
layout: default
pagination:
  data: dato.countries
  size: 1
  resolve: values
permalink: 'countries/{{ pagination.items[0].slug }}/'
---

{% set country = pagination.items[0] %}

{% SectionWrapper %}
	<h1 class="u-type-align-center">{{ country.name }}</h1>
	{% if country.introduction %}
		{% Passage { width: 'narrow', className: 'u-padding-top u-type-scale-gamma' } %}
			{% Markdown %}{{ country.introduction }}{% endMarkdown %}
		{% endPassage %}
	{% endif %}
{% endSectionWrapper %}

{# Demographics #}
{% SectionWrapper %}
	{% ContentWrapper { width: 'wide' } %}
		<h2 class="u-type-align-center u-padding-bottom">Demographics</h2>
		{% Gallery { flex: true } %}
			{% for stat in countryTestData.demographics %}
				<li>
					{% StatCard {
						title: stat.title,
						number: stat.number,
						context: stat.context,
						unit: stat.unit,
						className: 'u-position-flex-fill'
					} %}
				</li>
			{% endfor %}
		{% endGallery %}
	{% endContentWrapper %}
{% endSectionWrapper %}

{# ECD Indices #}
{% SectionWrapper %}
	{% ContentWrapper { width: 'wide' } %}
		<h2 class="u-type-align-center u-padding-bottom">ECD Indices</h2>
		<ul class="u-list-undecorated u-padding-y-flow">
			{% for stat in countryTestData.ecd_indexes %}
				<li class="u-display-block">
					<div class="c-bookend horizontal@xsmall align-top | c-gutter">
						<div class="c-bookend-item left | c-gutter-item | u-padding-y-flow-xxnarrow" style="max-width: 10rem;">
							{% StatCard {
								title: stat.title,
								number: stat.number,
								context: stat.context,
								unit: stat.unit
							} %}
						</div>
						<div class="c-bookend-item right fill | c-gutter-item">
							{% Passage { centered: false } %}
								{% Markdown %}{{ stat.description }}{% endMarkdown %}
							{% endPassage %}
						</div>
					</div>
				</li>
			{% endfor %}
		</ul>
	{% endContentWrapper %}
{% endSectionWrapper %}

