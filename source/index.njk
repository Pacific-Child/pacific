---
layout: default.njk
title: Home
---

{% Cover {
	contentWidth: false,
	className: 'u-padding-x-outside u-padding-top'
} %}

	{# Content #}
	<div class="u-type-align-center | u-margin-y-flow-wide | u-position-z-middle">

		{# Logo #}
		<h1 class="b-logo full vertical u-type-scale-zero">
			<img
				class="u-display-inline-block"
				src="{{graphics.logo.vertical}}"
				alt="Pacific Child logo"
			>
			<span class="u-hide-visually">{{dato.site.organization}}</span>
		</h1>

		{# Intro #}
		{% ContentWrapper %}
			<p class="u-type-scale-gamma">
				{% Markdown true %}{{dato.home.cover.introduction}}{% endMarkdown %}
			</p>
		{% endContentWrapper %}
		<a
			class="b-button home has-icon right u-type-font-display u-type-normal u-type-weight-bold"
			href="/{{dato.home.cover.callToAction.link.slug}}/"
		>
			{{dato.home.cover.callToAction.label}}
			<svg xmlns="http://www.w3.org/2000/svg" class="b-icon b-button-icon" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
			  <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
			  <polyline points="9 6 15 12 9 18" />
			</svg>
		</a>

		{# Call to action #}
		{# <div class="
		  u-position-absolute u-position-bottom-full
		  u-type-scale-gamma
		  u-color-fg-secondary
		">
		  <a
		  	class="u-no-border-bottom | u-display-block | u-anim-bounce | u-color-fg-primary"
		  	href="#body"
	  	>
		  	<svg xmlns="http://www.w3.org/2000/svg" class="b-icon" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">

			    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
			    <polyline points="6 9 12 15 18 9" />
			  </svg>
			</a>
		</div> #}
	</div>

	{# Seascape graphics #}
	<div class="b-seascape u-color-bg-water | u-position-z-low">
		<div class="b-seascape-water"></div>
		<div class="b-seascape-bg u-color-bg-sky">
			<div class="b-seascape-horizon sky"></div>
			<div class="b-seascape-horizon islands"></div>
			<div class="b-seascape-horizon reflections"></div>
		</div>
		<div class="b-seascape-ripple left"></div>
		<div class="b-seascape-ripple right"></div>
	</div>
{% endCover %}

<div id="body">
	{% if dato.home.showBanner %}
		<aside class="u-padding-x-outside u-padding-y u-color-bg-highlight">
			<div class="c-content-width xwide centered | c-bookend horizontal@small">
				{% if dato.home.bannerTitle %}
					<h1 class="c-bookend-item u-type-scale-gamma | u-padding-xnarrow">{{ dato.home.bannerTitle }}</h1>
				{% endif %}
				{% if dato.home.bannerDescription %}
					<p class="c-bookend-item fill | u-padding-xnarrow">{{ dato.home.bannerDescription }}</p>
				{% endif %}
				{% if dato.home.bannerButtonUrl %}
					<div class="u-padding-xnarrow">
						<a href="{{ dato.home.bannerButtonUrl }}" class="b-button | c-bookend-item">{{ dato.home.bannerButtonText }}</a>
					</div>
				{% endif %}
			</div>
		</aside>
	{% endif %}
	{% PageContent dato.home.sections, dato.resourcesIndex %}
</div>
