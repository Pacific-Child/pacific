<!DOCTYPE html>
<html class="no-js" lang="en">
	<head>
		<meta charset="utf-8">
		<title>{{title}}</title>
	  <meta name="description" content="">
	  <meta name="viewport" content="width=device-width, initial-scale=1">
	  <link rel="stylesheet" href="/stylesheets/main.css">
	  <script>
	    // Add a class to the html element to confirm JS is available
	    // -> used by the CSS for styling JS-dependent elements
	    document.documentElement.className = "js";
	    // Add a class if the browser/device supports touch
	    document.documentElement.className += (("ontouchstart" in document.documentElement) ? ' touch' : ' no-touch');
	  </script>

	</head>
	<body>
		{# Main header #}
		{% MainNav { items: nav } %}

		{# Main content #}
		<main>{{ content | safe }}</main>

		{# Main footer #}
		<footer
			class="u-border-top | u-type-scale-zeta"
			role="contentinfo"
		>
			<div class="u-padding-x-outside u-padding-y-narrow">
				<div>
					<img
						src="https://placehold.it/600x200?text=logo"
						alt="{{title}}"
					>
				</div>
				<form action="">
					<label
						class="u-hide-visually"
						for="footer-search"
					>
						Search
					</label>
					<input
						id="footer-search"
						name="footer-search"
						type="search"
						placeholder="Search"
					>
					<button class="u-hide-visually">Submit</button>
				</form>
			</div>
			<div>
				<nav>
					<ul>
						{% for category in footer_nav %}
						<li>
							<h2>{{category.heading}}</h2>
							<ul>
								{% for link in category.links %}
									<li><a href="#">{{link}}</a></li>
								{% endfor %}
							</ul>
						</li>
						{% endfor %}
					</ul>
				</nav>
				<div>
					<form action="">
						<label for="footer-subscribe">Subscribe</label>
						<input
							type="email"
							id="footer-subscribe"
							name="footer-subscribe"
						>
						<button>Subscribe</button>
					</form>
				</div>
			</div>
			<aside class="u-border-top | u-padding-x-outside u-padding-y-narrow">
				<div class="c-bookend horizontal@small | c-gutter narrow">
					<p class="c-bookend-item | c-gutter-item | u-type-font-display">
						<strong class="u-type-weight-bold">UNICEF</strong> Pacific Regional Council for Early Childhood Development
						<small>&copy; Copyright 2020. All rights reserved.</small>
					</p>
					<div class="c-bookend-item | c-gutter-item | u-type-font-display">
						<a class="u-color-fg-highlight" href="mailto:{{ contact }}">
							Contact us
						</a>
					</div>
				</div>
			</aside>
		</footer>

		{# Alpine JS from their CDN #}
		<script
			type="module"
			src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js"
		></script>
		<script
			nomodule
			src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/
			alpine-ie11.min.js"
			defer
		></script>
	</body>
</html>
