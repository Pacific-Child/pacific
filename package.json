  "description": "The web platform front-end for PRC4ECD",
  "main": "src/index.html",
  "scripts": {
    "start": "run-p watch:*",
    "build": "run-s lint:* build:sass build:eleventy",
    "build:eleventy": "npx @11ty/eleventy",
    "build:sass": "sass source/assets/stylesheets/:.tmp/",
    "lint:js": "npx eslint source/components/**",
    "lint:sass": "npx stylelint source/assets/stylesheets/**",
    "watch:eleventy": "npx @11ty/eleventy --serve",
    "watch:lint": "onchange source/ -- run-s lint:*",
    "watch:sass": "sass --watch source/assets/stylesheets/:.tmp/",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
