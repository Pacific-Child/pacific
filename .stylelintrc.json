{
  "extends": "stylelint-config-sass-guidelines",
  "rules": {
  	"indentation": "tab",
  	"selector-class-pattern": "^([a-z][a-z0-9]*)(?:-[a-z0-9]+|\\@[a-z0-9]+)*$",
  	"max-nesting-depth": [
  		2,
  		{
  			"ignore": ["pseudo-classes", "blockless-at-rules"],
  			"ignoreAtRules": [
  				"@if",
  				"@else",
  				"@else if",
  				"@each",
  				"@include"
  			]
  		}
  	]
  }
}
